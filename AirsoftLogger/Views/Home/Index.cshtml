@{
    ViewData["Title"] = "AirsoftLogger";

    if(User.Identity.IsAuthenticated && User.IsInRole("Manager"))
    {
        Layout = "LoggedIn";
    }
    else
    {
        Layout = "_Layout";
    }
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Slideshow.js"></script>
<div class="header" >
    <div class="text-center">
        <h2 class="display-3">Meet your Newest Airsoft Companion:</h2>
        <h1 class="display-2">Airsoft Logger</h1>
        <br />
        <h2 class="display-4 align-bottom">Airsoft Logger is your one stop shop for all UK Based Airsoft Events, It contains all the important information you need to find any Airsoft Site near or far and gives you all the Dates you need for any Airsoft Events.</h2>
        <div class="slideshow-container">

            <div class="mySlides fade">
                <img class="img-fluid" src="~/images/Slideshow/img1.jpg" />
            </div>

            <div class="mySlides fade">
                <img class="img-fluid" src="~/images/Slideshow/img2.jpg" />
            </div>

            <div class="mySlides fade">
                <img class="img-fluid" src="~/images/Slideshow/img3.jpg" />
            </div>

            <div class="mySlides fade">
                <img class="img-fluid" src="~/images/Slideshow/img4.jpg" />
            </div>
        </div>

    </div>
</div>

